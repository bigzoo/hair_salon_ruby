<!-- STYLISTS SECTION -->
<a class="btn-floating btn-large waves-effect waves-light black lighten-2 center z-depth-3" data-target="modal1">
  <i class="material-icons">add</i>
</a>
<%if @stylists.any?() %>
<ul class="center collection with-header">
  <li class="collection-header">
    <h4>Stylists Names</h4>
  </li>
  <% @stylists.each() do |stylist|%>
  <li class="collection-item">
    <div> <a href="/stylists/<%= stylist.id %>"><%= stylist.name%></a>
      <a href="/stylists/delete/<%= stylist.id %>" class="secondary-content">
        <i class="material-icons red-text">delete</i>
      </a>
      <div class="secondary-content">
        <%= stylist.clients_count %>
      </div>
    </div>
  </li>
  <%end %>
</ul>
<% else %>
<ul class="center collection with-header">
  <li class="collection-header">
    <h4>Please add some stylists!</h4>
  </li>
</ul>
<% end %>

<div id="modal1" class="modal">
  <div class="modal-content">
    <h4 class="center">New Stylist</h4>
    <form action="/stylists" method="post">
      <div>
        <div class="input-field">
          <input name="name" id="name" type="text" class="validate">
          <label for="name">Stylist Name</label>
        </div>
      </div>
      <button type="submit" class="modal-action black white-text lighten-2 modal-close waves-effect waves-green btn-flat">Add Stylist</button>
    </form>
  </div>
</div>

<!-- CLIENTS SECTION -->

<a class="btn-floating btn-large waves-effect waves-light black lighten-2 center z-depth-3" data-target="modal2">
  <i class="material-icons">add</i>
</a>
<%if @clients.any?() %>
<ul class="center collection with-header">
  <li class="collection-header">
    <h4>Client Names</h4>
  </li>
  <% @clients.each() do |client|%>
  <li class="collection-item">
    <div> <a href="/clients/<%= client.id %>"><%= client.name%></a>
      <a href="/clients/delete/<%= client.id %>" class="secondary-content">
        <i class="material-icons red-text">delete</i>
      </a>
    </div>
  </li>
  <%end %>
</ul>
<% else %>
<ul class="center collection with-header">
  <li class="collection-header">
    <h4>Please add some clients!</h4>
  </li>
</ul>
<% end %>

<div id="modal2" class="modal">
  <div class="modal-content">
    <h4 class="center">New Client</h4>
    <form action="/clients" method="post">
      <div>
        <div class="input-field">
          <input name="name" id="name" type="text" class="validate">
          <label for="name">Client Name</label>
        </div>
      </div>
      <button type="submit" class="modal-action black white-text lighten-2 modal-close waves-effect waves-green btn-flat">Add Client</button>
    </form>
  </div>
</div>
